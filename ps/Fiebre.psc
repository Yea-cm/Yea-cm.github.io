	Escribir "*** ¿El paciente tiene fiebre? ***";
	Escribir "Por favor, digite la temperatura del paciente en °C";
	Leer c;
	
	Si c>38 Entonces
		Escribir "El paciente con una temperatura de: ",c " °c tiene fiebre";
