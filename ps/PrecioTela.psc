Proceso PrecioTela
	Definir pm,pt Como Real;
	Definir mt Como Entero; 
	
	Escribir "*** Precio a pagar por la cantidad de tela en metros ***";
	Escribir "Por favor, digite el precio de un metro de tela";
	Leer pm;
	Escribir "Digite la cantidad de tela por metro";
	Leer mt;
	
	pt<-pm*mt;
	
	Escribir "El valor a pagar por: ",mt " metro/s de tela es: ",pt;
	
	
FinProceso
