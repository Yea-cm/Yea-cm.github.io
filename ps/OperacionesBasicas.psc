Proceso OperacionesBasicas
	Definir n1,n2,su,re,mu,di Como Real;
	
	Escribir "*** Operaciones básicas ***";
	Escribir "Digite el 1er número";
	Leer n1;
	Escribir "Digite el 2do número";
	Leer n2;
	
	su<-n1+n2;
	re<-n1-n2;
	mu<-n1*n2;
	di<-n1/n2;

	Escribir "El resultado de las operaciones básicas de los números ",n1 " y ",n2 " es: "
	Escribir "Suma: ",su;
	Escribir "Resta: ",re; 
	Escribir "Multiplicación: ",mu; 
	Escribir "División: ", di; 

FinProceso
